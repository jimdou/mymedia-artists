<img src="<%= @artist.image %>" alt="">


<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @artist.description %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @artist.genre %>
</p>

<p>
  <strong>Birth date:</strong>
  <%= @artist.birthDate.year %>
</p>

<p>
  <strong>Death date:</strong>
  <%= @artist.deathDate.year %>
</p>

