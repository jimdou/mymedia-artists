</p>



<h1>Similar Artists - In database</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Image</th>
      <th>Birthdate</th>
      <th>Deathdate</th>
      <th>Activefrom</th>
      <th>Activeuntil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist.similar_artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.description %></td>
        <td><%= artist.genre %></td>
        <td><img src="<%= artist.image %>" alt="" width="100"></td>
        <!-- <td><%= artist.birthDate %></td>
        <td><%= artist.deathDate %></td>
        <td><%= artist.activeFrom %></td>
        <td><%= artist.activeUntil %></td> -->
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>






<h1>Similar Artists - Last.fm</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @similar_artists_lastfm.each do |artist| %>
      <tr>
        <td><%= artist["name"] %></td>
        <td><img src="<%= artist['image'][0]['#text'] %>" alt="" width="100"></td>
      </tr>
    <% end %>
  </tbody>
</table>


